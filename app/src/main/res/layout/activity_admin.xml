<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Welcome to Admin page"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_admin2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Choose what to do below:"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.096" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_ac"
                android:layout_width="91dp"
                android:layout_height="30dp"
                android:text="Account:"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="181dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btn_create_ac"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/et_login_password"
                android:text="Create new account"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="227dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btn_edit_ac"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/et_login_password"
                android:text="Edit account"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="310dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="91dp"
                android:layout_height="30dp"
                android:layout_marginEnd="307dp"
                android:text="Menu:"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="446dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btn_create_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/et_login_password"
                android:text="Create new food"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="488dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btn_edit_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/et_login_password"
                android:text="Edit menu"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="569dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>